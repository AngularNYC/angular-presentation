{
  "hosting": [
    {
      "target": "codelab",
      "public": "dist/apps/codelab",
      "rewrites": [
        {
          "source": "/ru/**",
          "destination": "/ru/index.html"
        },
        {
          "source": "/30/**",
          "destination": "/30/index.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "codelab-next",
      "public": "dist/apps/codelab",
      "rewrites": [
        {
          "source": "/ru/**",
          "destination": "/ru/index.html"
        },
        {
          "source": "/30/**",
          "destination": "/30/index.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "kirjs",
      "public": "dist/apps/kirjs",
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "lis",
      "public": "dist/apps/lis",
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
